<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
		tools:context="layout.BioData">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	<!-- TODO: Update blank fragment layout -->
	
	<ImageView
			android:id="@+id/imageView"
			android:layout_width="153dp"
			android:layout_height="132dp"
			android:layout_marginLeft="16dp"
			android:layout_marginTop="16dp"
			android:contentDescription="@string/donor_picture"
			android:scaleType="fitXY"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@drawable/bloodhand"
			tools:layout_constraintLeft_creator="1"
			tools:layout_constraintTop_creator="1"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent" />

	<TextView
		android:text="First Name"
		android:layout_width="147dp"
		android:layout_height="24dp"
		app:layout_constraintTop_toTopOf="@+id/imageView"
		android:layout_marginTop="139dp"
		android:layout_marginBottom="0dp"
		app:layout_constraintBottom_toTopOf="@+id/etFname"
		android:layout_marginLeft="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintHorizontal_bias="0.16"
		app:layout_constraintVertical_bias="1.0" />

	<TextView
		android:id="@+id/etFname"
		android:layout_width="311dp"
		android:layout_height="45dp"
		android:layout_marginTop="161dp"
		android:inputType="none"
		android:textSize="18sp"
		android:textStyle="bold"
		app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintHorizontal_bias="0.333" />

	<TextView
		android:text="Last Name"
		android:layout_width="147dp"
		android:layout_height="24dp"
		app:layout_constraintTop_toTopOf="@+id/imageView"
		android:layout_marginTop="139dp"
		android:layout_marginBottom="0dp"
		app:layout_constraintBottom_toTopOf="@+id/etLname"
		android:layout_marginLeft="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintHorizontal_bias="0.16"
		app:layout_constraintVertical_bias="1.0" />

	<TextView
		android:id="@+id/etLname"
		android:layout_width="311dp"
		android:layout_height="49dp"
		android:layout_marginTop="232dp"
		android:inputType="none"
		android:textSize="18sp"
		android:textStyle="bold"
		app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintHorizontal_bias="0.333" />

	<TextView
		android:text="Your Gender"
		android:layout_width="147dp"
		android:layout_height="24dp"
		app:layout_constraintTop_toTopOf="@+id/imageView"
		android:layout_marginTop="139dp"
		android:layout_marginBottom="0dp"
		app:layout_constraintBottom_toTopOf="@+id/etGender"
		android:layout_marginLeft="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintHorizontal_bias="0.16"
		app:layout_constraintVertical_bias="1.0" />

	<TextView
		android:id="@+id/etGender"
		android:layout_width="311dp"
		android:layout_height="41dp"
		android:layout_marginTop="291dp"
		android:inputType="none"
		android:textSize="18sp"
		android:textStyle="bold"
		app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintHorizontal_bias="0.333" />

	<TextView
		android:text="Your Blood Group"
		android:layout_width="147dp"
		android:layout_height="24dp"
		app:layout_constraintTop_toTopOf="@+id/imageView"
		android:layout_marginTop="139dp"
		android:layout_marginBottom="0dp"
		app:layout_constraintBottom_toTopOf="@+id/etBGroup"
		android:layout_marginLeft="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintHorizontal_bias="0.16"
		app:layout_constraintVertical_bias="1.0" />

	<TextView
		android:id="@+id/etBGroup"
		android:layout_width="311dp"
		android:layout_height="40dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="210dp"
		android:inputType="none"
		android:textSize="18sp"
		android:textStyle="bold"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintHorizontal_bias="0.333" />

	<TextView
		android:text="Your Email"
		android:layout_width="147dp"
		android:layout_height="24dp"
		app:layout_constraintTop_toTopOf="@+id/imageView"
		android:layout_marginTop="139dp"
		android:layout_marginBottom="0dp"
		app:layout_constraintBottom_toTopOf="@+id/etEmail"
		android:layout_marginLeft="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintHorizontal_bias="0.16"
		app:layout_constraintVertical_bias="1.0" />

	<TextView
		android:id="@+id/etEmail"
		android:layout_width="311dp"
		android:layout_height="43dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="417dp"
		android:inputType="none"
		android:textSize="18sp"
		android:textStyle="bold"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintHorizontal_bias="0.333" />

</android.support.constraint.ConstraintLayout>
</ScrollView>